<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/weatherListFragment">
    <fragment
        android:id="@+id/weatherListFragment"
        android:name="com.tryandlearn.weather.ui.list.WeatherListFragment"
        android:label="fragment_weather_list"
        tools:layout="@layout/fragment_weather_list" >
        <action
            android:id="@+id/action_weatherListFragment_to_weatherDetailFragment2"
            app:destination="@id/weatherDetailFragment" >
            <argument
                android:name="latitude"
                app:argType="float" />
            <argument
                android:name="longitude"
                app:argType="float" />
            <argument
                android:name="count"
                app:argType="integer" />
            <argument
                android:name="units"
                app:argType="string" />
            <argument
                android:name="appId"
                app:argType="string" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/weatherDetailFragment"
        android:name="com.tryandlearn.weather.ui.detail.WeatherDetailFragment"
        android:label="fragment_weather_detail"
        tools:layout="@layout/fragment_weather_detail" >
        <argument
            android:name="latitude"
            app:argType="float" />
        <argument
            android:name="longitude"
            app:argType="float" />
        <argument
            android:name="count"
            app:argType="integer" />
        <argument
            android:name="units"
            app:argType="string" />
        <argument
            android:name="appId"
            app:argType="string" />
    </fragment>
</navigation>